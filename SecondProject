from math import *

file  = pickAFile()
sound = makeSound(file)
sample = getSamples(sound)
width = 1000
height = getLength(sound) / width
pic = makeEmptyPicture(width, height)

highestIndex = 0
lowestIndex = 0
lowIndex = 0
middleIndex = 0
highIndex = 0
x = 0
y = 0

for sample in range(0, getLength(sound)):
  if sound.getSampleValue(sample) > highestIndex:
    highestIndex = sound.getSampleValue(sample)
  if sound.getSampleValue(sample) < lowestIndex:
    lowestIndex = sound.getSampleValue(sample)
  
lowIndex = lowestIndex / 2
highIndex = highestIndex / 2

purple = makeColor(128, 0, 128)
teal = makeColor(0, 128, 128)

for sample in range(0, getLength(sound)):
  for x in range(0, width):
     pixel = getPixel(pic, x, y)
     if sample == highestIndex:
       setColor(pixel, blue)
     elif sample == lowestIndex:
       setColor(pixel, red)
     elif sample == highIndex:
       setColor(pixel, purple)
     elif sample == lowIndex:
       setColor(pixel, yellow)
     elif sample > lowestIndex and sample < lowIndex:
       setColor(pixel, green)
     elif sample > lowIndex and sample < middleIndex:
       setColor(pixel, cyan)
     elif sample > middleIndex and sample < highIndex:
       setColor(pixel, magenta)
     elif sample > highIndex and sample < highestIndex:
       setColor(pixel, teal)
     else:
       setColor(pixel, black)
     x += 1
  y += 1
  if y + 1 > height:
    break

file = r"C:\Users\Myron\Desktop\temp.jpg"
writePictureTo(pic, file)